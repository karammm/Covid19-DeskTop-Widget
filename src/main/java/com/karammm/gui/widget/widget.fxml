<AnchorPane fx:id="rootPane" stylesheets="@../style/main_style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.karammm.gui.widget.WidgetController">
   <children>
